@model RealStateModel.Category?

@{
    ViewData["Title"] = "Import Categories";
}

<div class="container fade-in-up">
    <div class="page-header text-center">
        <div class="header-content">
            <h1 class="page-title justify-content-center d-flex">
                <i class="fa-solid fa-file-import"></i>
                Import Categories
            </h1>
            <p class="page-subtitle">Import categories from a TXT file and manage your options with flexibility</p>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="import-card">
            <form asp-action="ImportCategory" asp-controller="Category" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="file" class="form-label fw-semibold">Select TXT File</label>
                    <input type="file" name="file" accept=".txt" class="form-control" required />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Import Options</label>
                    <select name="importOption" class="form-select" required>
                        <option value="overwrite">Overwrite All</option>
                        <option value="add">Add Without Duplicates</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" asp-controller="Category" class="btn btn-outline-custom">
                        <i class="fa-solid fa-arrow-left me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary-custom">
                        <i class="fa-solid fa-file-import me-1"></i> Import
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
