@model RealStateModel.Property

@{
    ViewData["Title"] = "Delete Property";
}

<div class="container fade-in-up">
    <div class="page-header text-center">
        <div class="header-content">
            <h1 class="page-title justify-content-center d-flex">
                <i class="fa-solid fa-trash"></i>
                Delete Property
            </h1>
            <p class="page-subtitle">Confirm the deletion of the selected property</p>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="delete-card">
            <div class="delete-card-header mb-3">
                <h5>Are you sure you want to delete this property?</h5>
            </div>
            <div class="delete-card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8 id-cell">@Model.Id</dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8 name-cell">@Model.Name</dd>

                    <dt class="col-sm-4">Street:</dt>
                    <dd class="col-sm-8 address-cell">@Model.Location.Street</dd>

                    <dt class="col-sm-4">City:</dt>
                    <dd class="col-sm-8">@Model.Location.City</dd>

                    <dt class="col-sm-4">State:</dt>
                    <dd class="col-sm-8">@Model.Location.State</dd>

                    <dt class="col-sm-4">Country:</dt>
                    <dd class="col-sm-8">@Model.Location.Country</dd>

                    <dt class="col-sm-4">Bedrooms:</dt>
                    <dd class="col-sm-8">@Model.NumBedrooms</dd>

                    <dt class="col-sm-4">Bathrooms:</dt>
                    <dd class="col-sm-8">@Model.NumBathrooms</dd>

                    <dt class="col-sm-4">Parking Spaces:</dt>
                    <dd class="col-sm-8">@Model.NumParkingSpaces</dd>

                    <dt class="col-sm-4">Area (m²):</dt>
                    <dd class="col-sm-8">@Model.AreaSize</dd>

                    <dt class="col-sm-4">Year Built:</dt>
                    <dd class="col-sm-8">@Model.YearBuilt</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">@string.Format("{0:C} {1}", Model.Price, Model.Currency)</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">@Model.Status</dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@(Model.Category?.Name ?? "Uncategorized")</dd>
                </dl>
            </div>
            <div class="delete-card-footer d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Index" asp-controller="Property" class="btn btn-outline-custom">
                    <i class="fa-solid fa-arrow-left me-1"></i> Back to List
                </a>

                <form method="post" asp-action="ConfirmDelete" asp-controller="Property" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger-custom">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
